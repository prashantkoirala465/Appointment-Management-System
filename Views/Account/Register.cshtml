@model AppointmentSystem.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-page">
    <div class="login-wrapper">
        <a href="/" class="login-back">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
            Back to home
        </a>
        <div class="login-card">
            <div class="login-logo">
                appointra
                <span>Scheduling Platform</span>
            </div>

            <h1 class="login-title">Staff Registration</h1>
            <p class="login-subtitle">Create a staff account. An admin will review and approve your registration.</p>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="login-error">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <form asp-action="Register" method="post" class="form-custom">
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-input" placeholder="e.g. John Smith" autocomplete="name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-input" placeholder="Choose a username" autocomplete="username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email (optional)</label>
                    <input asp-for="Email" class="form-input" placeholder="email@example.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-input" placeholder="At least 6 characters" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-input" placeholder="Re-enter your password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-primary-custom" style="width:100%; justify-content:center; padding:12px;">Register as Staff</button>

                <p style="text-align:center; margin-top:var(--space-lg); font-size:var(--font-sm); color:var(--color-text-muted);">
                    Already have an account?
                    <a asp-action="Login" style="color:var(--color-accent); font-weight:500;">Sign in</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
