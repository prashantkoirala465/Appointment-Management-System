@model IEnumerable<AppointmentSystem.Web.Models.Staff>
@{
    ViewData["Title"] = "Staff";
}

<div style="display:flex; align-items:center; justify-content:space-between; margin-bottom: var(--space-xl); flex-wrap:wrap; gap:var(--space-md);">
    <div>
        <h1 class="page-title">Staff</h1>
        <p class="page-subtitle">View and manage your team members.</p>
    </div>
    <a class="btn-primary-custom" asp-action="Create">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        Add Staff
    </a>
</div>

@if (Model.Any())
{
    <div class="card-custom">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Specialty</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight:500;">@item.FullName</td>
                        <td>@(item.Email ?? "—")</td>
                        <td>@(item.PhoneNumber ?? "—")</td>
                        <td>@(item.Specialty ?? "—")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-status badge-active">Active</span>
                            }
                            else
                            {
                                <span class="badge-status badge-inactive">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-links">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card-custom">
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            </div>
            <h3>No staff members</h3>
            <p>Add your first team member to get started.</p>
            <a asp-action="Create" class="btn-primary-custom btn-sm-custom">Add Staff</a>
        </div>
    </div>
}
