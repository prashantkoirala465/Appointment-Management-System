@model AppointmentSystem.Web.Models.Staff
@{
    ViewData["Title"] = "Staff Details";
}

<div style="margin-bottom: var(--space-xl);">
    <h1 class="page-title">Staff Details</h1>
    <p class="page-subtitle">Viewing profile for @Model.FullName.</p>
</div>

<div class="card-custom" style="max-width:540px;">
    <div class="card-body-custom">
        <dl class="detail-grid">
            <dt>Full Name</dt>
            <dd>@Model.FullName</dd>

            <dt>Email</dt>
            <dd>@(Model.Email ?? "—")</dd>

            <dt>Phone</dt>
            <dd>@(Model.PhoneNumber ?? "—")</dd>

            <dt>Specialty</dt>
            <dd>@(Model.Specialty ?? "—")</dd>

            <dt>Status</dt>
            <dd>
                @if (Model.IsActive)
                {
                    <span class="badge-status badge-active">Active</span>
                }
                else
                {
                    <span class="badge-status badge-inactive">Inactive</span>
                }
            </dd>
        </dl>

        <div class="btn-group-custom" style="margin-top:var(--space-lg);">
            <a class="btn-primary-custom" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn-secondary-custom" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
