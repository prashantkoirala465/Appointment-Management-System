@model AppointmentSystem.Web.Models.Staff
@{
    ViewData["Title"] = "Edit Staff";
}

<div style="margin-bottom: var(--space-xl);">
    <h1 class="page-title">Edit Staff</h1>
    <p class="page-subtitle">Update @Model.FullNameâ€™s information below.</p>
</div>

<div class="card-custom" style="max-width:540px;">
    <div class="card-body-custom">
        <form asp-action="Edit" class="form-custom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" class="form-input" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div style="display:grid; grid-template-columns:1fr 1fr; gap:var(--space-md);">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone</label>
                    <input asp-for="PhoneNumber" class="form-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Specialty">Specialty</label>
                <input asp-for="Specialty" class="form-input" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check-custom">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive">Active</label>
                </div>
            </div>

            <div class="btn-group-custom" style="margin-top:var(--space-lg);">
                <button type="submit" class="btn-primary-custom">Save Changes</button>
                <a class="btn-secondary-custom" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
