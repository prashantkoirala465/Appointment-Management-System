<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- This makes the site responsive on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Dynamic title - each page can set its own title through ViewData -->
    <title>@ViewData["Title"] - Appointment System</title>

    <!-- Bootstrap CSS from CDN - provides all the nice styling and responsive layout -->
    <!-- Using version 5.3.3 for modern look and feel -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    <!-- Our custom CSS file for any site-specific styling -->
    <!-- asp-append-version adds a cache-busting query string so browsers load the latest version -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navigation bar at the top of every page -->
        <!-- navbar-expand-lg means it collapses to a hamburger menu on smaller screens -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/logo - clicking it takes you to the homepage -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">AppointmentSystem</a>
                
                <!-- Hamburger button for mobile - only visible on small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- The actual navigation menu items -->
                <!-- This collapses into the hamburger menu on mobile -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Home page link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Dashboard link - visible to all logged-in users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <!-- Dynamic menu items based on user's assigned menus -->
                            @if (ViewData["UserMenus"] is List<AppointmentSystem.Web.Models.Menu> userMenus)
                            {
                                @foreach (var menu in userMenus)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="@menu.Url">@menu.MenuName</a>
                                    </li>
                                }
                            }
                        }
                    </ul>

                    <!-- Right side of navbar - shows login/logout status -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Show the logged-in user's name -->
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hello, @User.Identity.Name!</span>
                            </li>
                            <!-- Logout button as a form (POST request for security) -->
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Show login link for unauthenticated users -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content area - where each page's specific content appears -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Each view (Index, Create, Edit, etc.) renders here -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer at the bottom of every page -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Copyright notice and privacy link -->
            &copy; 2026 - AppointmentSystem.Web - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JavaScript - needed for interactive components like the mobile menu -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- jQuery - required for client-side validation -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    
    <!-- jQuery validation libraries - provides client-side form validation -->
    <!-- This gives users instant feedback if they enter invalid data -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.20.0/dist/jquery.validate.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>

    <!-- Our custom JavaScript file for any site-specific functionality -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Optional section for page-specific scripts -->
    <!-- Individual pages can inject their own JavaScript here if needed -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
