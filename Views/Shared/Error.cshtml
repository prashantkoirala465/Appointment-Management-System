@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="error-page">
    <div class="error-code">500</div>
    <h1>Something went wrong</h1>
    <p>An unexpected error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p style="font-size:var(--font-xs); color:var(--color-text-muted); margin-top:var(--space-lg);">
            Request ID: <code style="background:var(--color-surface-2); padding:2px 8px; border-radius:4px;">@Model.RequestId</code>
        </p>
    }

    <div style="margin-top:var(--space-xl);">
        <a href="/" class="btn-primary-custom">Go Home</a>
    </div>
</div>
