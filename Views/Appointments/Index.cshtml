@model IEnumerable<AppointmentSystem.Web.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<div style="display:flex; align-items:center; justify-content:space-between; margin-bottom: var(--space-xl); flex-wrap:wrap; gap:var(--space-md);">
    <div>
        <h1 class="page-title">Appointments</h1>
        <p class="page-subtitle">Manage and track all scheduled appointments.</p>
    </div>
    <a class="btn-primary-custom" asp-action="Create">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        New Appointment
    </a>
</div>

@if (Model.Any())
{
    <div class="card-custom">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Staff</th>
                    <th>Date &amp; Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var cls = item.Status switch
                    {
                        "Scheduled" => "badge-scheduled",
                        "Completed" => "badge-completed",
                        "Cancelled" => "badge-cancelled",
                        "No-Show"   => "badge-noshow",
                        _           => "badge-default"
                    };
                    <tr>
                        <td style="font-weight:500;">@item.ClientName</td>
                        <td>@(item.Staff?.FullName ?? "â€”")</td>
                        <td>@item.StartTime.ToString("MMM dd, yyyy  h:mm tt")</td>
                        <td>@item.DurationMinutes min</td>
                        <td><span class="badge-status @cls">@item.Status</span></td>
                        <td>
                            <div class="action-links">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="card-custom">
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            </div>
            <h3>No appointments yet</h3>
            <p>Create your first appointment to get started.</p>
            <a asp-action="Create" class="btn-primary-custom btn-sm-custom">Create Appointment</a>
        </div>
    </div>
}
