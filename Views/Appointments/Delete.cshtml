@model AppointmentSystem.Web.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}

<div style="margin-bottom: var(--space-xl);">
    <h1 class="page-title">Delete Appointment</h1>
    <p class="page-subtitle">This action cannot be undone.</p>
</div>

<div class="card-custom" style="max-width:640px; border: 1px solid var(--color-danger); border-radius: var(--radius-md);">
    <div class="card-body-custom">
        <div style="display:flex; align-items:center; gap:var(--space-md); margin-bottom:var(--space-lg); padding:var(--space-md); background:#fce4e1; border-radius:var(--radius-sm);">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#c0392b" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
            <span style="font-size:var(--font-sm); font-weight:500; color:#96281b;">Are you sure you want to delete this appointment?</span>
        </div>

        <dl class="detail-grid">
            <dt>Staff</dt>
            <dd>@(Model.Staff?.FullName ?? "â€”")</dd>

            <dt>Client</dt>
            <dd>@Model.ClientName</dd>

            <dt>Start Time</dt>
            <dd>@Model.StartTime.ToString("MMM dd, yyyy  h:mm tt")</dd>

            <dt>Status</dt>
            <dd>@Model.Status</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group-custom" style="margin-top:var(--space-lg);">
                <button type="submit" class="btn-danger-custom">Delete Permanently</button>
                <a class="btn-secondary-custom" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
