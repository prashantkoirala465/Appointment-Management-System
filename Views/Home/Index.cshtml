@{
    // Set the page title that appears in the browser tab
    ViewData["Title"] = "Home";
}

<!-- Main homepage content - centered and welcoming -->
<div class="text-center">
    <!-- Large heading to welcome users -->
    <h1 class="display-4">Appointment Management System</h1>
    
    <!-- Subtitle with brief instructions -->
    <p class="lead">Manage your appointments, staff, and users with ease.</p>
    
    <!-- Call-to-action button to log in -->
    <div class="mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Login">Sign In to Get Started</a>
    </div>
</div>
