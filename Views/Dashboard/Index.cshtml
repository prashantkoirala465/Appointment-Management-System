@model AppointmentSystem.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var firstName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value?.Split(' ').FirstOrDefault() ?? User.Identity?.Name ?? "there";
    var hour = DateTime.Now.Hour;
    var greeting = hour < 12 ? "Good morning" : hour < 17 ? "Good afternoon" : "Good evening";
}

<h1 class="dashboard-greeting">@greeting, <span>@firstName</span></h1>
<p class="dashboard-date">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
    @DateTime.Now.ToString("dddd, MMMM d, yyyy")
</p>

<!-- Quick Actions -->
@if (Model.PendingApprovals > 0)
{
    <div class="card-custom" style="background:linear-gradient(135deg, #fef5e7, #fdebd0); border-left:4px solid var(--color-warning, #d4ac0d); margin-bottom:var(--space-xl); padding:var(--space-lg);">
        <div style="display:flex; align-items:center; gap:var(--space-md); flex-wrap:wrap;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#d4ac0d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <div style="flex:1;">
                <strong style="font-size:var(--font-base);">@Model.PendingApprovals pending registration@(Model.PendingApprovals > 1 ? "s" : "") awaiting approval</strong>
                <p style="margin:0; font-size:var(--font-sm); color:var(--color-text-muted);">New staff members have signed up and need your review.</p>
            </div>
            <a asp-controller="Users" asp-action="Index" class="btn-primary-custom btn-sm-custom">Review Now</a>
        </div>
    </div>
}

<div class="quick-actions">
    <a class="quick-action" asp-controller="Appointments" asp-action="Create">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        New Appointment
    </a>
    <a class="quick-action" asp-controller="Staffs" asp-action="Create">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="8.5" cy="7" r="4"/><line x1="20" y1="8" x2="20" y2="14"/><line x1="23" y1="11" x2="17" y2="11"/></svg>
        Add Staff
    </a>
    <a class="quick-action" asp-controller="Appointments" asp-action="Index">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
        View Calendar
    </a>
</div>

<!-- Stat Cards Grid -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon" style="background:#e8f4fd; color:#2980b9;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
        </div>
        <div class="stat-label">Total Appointments</div>
        <div class="stat-value">@Model.TotalAppointments</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background:#e8f4fd; color:#2980b9;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="stat-label">Scheduled</div>
        <div class="stat-value" style="color: var(--color-info);">@Model.ScheduledAppointments</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background:#e9f7ef; color:#27ae60;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
        </div>
        <div class="stat-label">Completed</div>
        <div class="stat-value" style="color: var(--color-success);">@Model.CompletedAppointments</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background:#fce4e1; color:#c0392b;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
        </div>
        <div class="stat-label">Cancelled</div>
        <div class="stat-value" style="color: var(--color-danger);">@Model.CancelledAppointments</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background:#fef5e7; color:#d4ac0d;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/><line x1="10" y1="14" x2="14" y2="14"/></svg>
        </div>
        <div class="stat-label">Today</div>
        <div class="stat-value" style="color: var(--color-warning);">@Model.TodayAppointments</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background:#eee; color:#666;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
        </div>
        <div class="stat-label">Staff Members</div>
        <div class="stat-value">@Model.ActiveStaff</div>
        <div class="stat-sub">of @Model.TotalStaff total</div>
    </div>
</div>

<!-- Recent Appointments -->
<div class="card-custom">
    <div class="card-header-custom">
        <h2>Recent Appointments</h2>
        <a asp-controller="Appointments" asp-action="Index" class="btn-secondary-custom btn-sm-custom">View All</a>
    </div>

    @if (Model.RecentAppointments.Any())
    {
        <div class="table-scroll-wrapper">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Staff</th>
                    <th>Date &amp; Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model.RecentAppointments)
                {
                    var cls = appt.Status switch
                    {
                        "Scheduled" => "badge-scheduled",
                        "Completed" => "badge-completed",
                        "Cancelled" => "badge-cancelled",
                        "No-Show"   => "badge-noshow",
                        _           => "badge-default"
                    };
                    <tr>
                        <td style="font-weight:500;">@appt.ClientName</td>
                        <td>@appt.Staff?.FullName</td>
                        <td>@appt.StartTime.ToString("MMM dd, yyyy  h:mm tt")</td>
                        <td>@appt.DurationMinutes min</td>
                        <td><span class="badge-status @cls">@appt.Status</span></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            </div>
            <h3>No appointments yet</h3>
            <p>Create your first appointment to see it here.</p>
            <a asp-controller="Appointments" asp-action="Create" class="btn-primary-custom btn-sm-custom">Create Appointment</a>
        </div>
    }
</div>
