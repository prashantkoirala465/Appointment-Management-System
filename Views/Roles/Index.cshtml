@model IEnumerable<AppointmentSystem.Web.Models.Role>
@{
    ViewData["Title"] = "Roles";
}

<div style="display:flex; align-items:center; justify-content:space-between; margin-bottom: var(--space-xl); flex-wrap:wrap; gap:var(--space-md);">
    <div>
        <h1 class="page-title">Roles</h1>
        <p class="page-subtitle">Define roles to control user access levels.</p>
    </div>
    <a class="btn-primary-custom" asp-action="Create">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
        Add Role
    </a>
</div>

@if (Model.Any())
{
    <div class="card-custom">
        <div class="table-scroll-wrapper">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Description</th>
                    <th>Users</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight:500;">@item.RoleName</td>
                        <td>@(item.Description ?? "â€”")</td>
                        <td>
                            <span class="badge-status badge-default">@item.UserRoles.Count assigned</span>
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-status badge-active">Active</span>
                            }
                            else
                            {
                                <span class="badge-status badge-inactive">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="action-links">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
}
else
{
    <div class="card-custom">
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            </div>
            <h3>No roles yet</h3>
            <p>Create roles to define access levels for users.</p>
            <a asp-action="Create" class="btn-primary-custom btn-sm-custom">Add Role</a>
        </div>
    </div>
}
